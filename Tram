#include<bits/stdc++.h>
using namespace std;


int main(){
	#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
	#endif

	int n,a,b;
	cin>>n;
	int enter=0;
	int exit=0;
	int maxv=INT_MIN;
	while(n--!=0){
		cin>>a>>b;
		enter=enter-a+b;
		maxv=max(maxv,enter);
	}
    cout<<maxv;
	return 0;
}
